<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.RegisterEnterPhoneFragment"
    android:layout_marginHorizontal="@dimen/horizontal_margin">

    <EditText
        android:id="@+id/register_enter_phone_edit_text"
        style="@style/editTextDefaultTheme"
        android:inputType="phone"
        android:textSize="@dimen/text_large"
        android:hint="@string/edit_text_hint_phone_number"
        android:layout_marginTop="@dimen/vertical_medium_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/register_enter_phone_btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/horizontal_margin"
        android:src="@drawable/ic_navigate_next"
        android:backgroundTint="@color/primary"
        app:borderWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
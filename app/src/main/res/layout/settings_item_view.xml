<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/settings_item_large">

    <ImageView
        android:id="@+id/settings_item_icon"
        style="@style/settings_item_icon"
        android:src="@drawable/ic_notify"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/settings_item_text"
        style="@style/settings_item_name_text"
        android:text="@string/settings_notify_text"
        app:layout_constraintTop_toTopOf="@id/settings_item_icon"
        app:layout_constraintBottom_toBottomOf="@id/settings_item_icon"
        app:layout_constraintStart_toEndOf="@id/settings_item_icon"
        />

    <View
        style="@style/settings_item_divider"
        app:layout_constraintTop_toBottomOf="@+id/settings_item_text"
        app:layout_constraintStart_toStartOf="@+id/settings_item_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>